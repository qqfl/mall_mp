.line1,.line2{
  display: inline-block;
  width: 30%;
  border-bottom: 1px solid;
}
.line1:after,.line2:after{
  content: "";
  display: inline-block;
  width: 3px;
  height: 3px;
  background-color: #000;
  vertical-align: bottom;
  position: absolute;
  margin-top: -1rpx;
}

.line2{
  float: right;
}

.line2:after{
  right: 24rpx;
}

.description{
  color: #999;
  padding: 30rpx 0;
}

.show{
  padding: 40rpx 0;
  font-size: 32rpx;
}
.moreImg image{
  width: 100%;
  margin-top: -20rpx;
}
